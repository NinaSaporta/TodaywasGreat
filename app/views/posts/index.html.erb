<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta name="description" content="TodayWasGreat.com is a simple way to be more positive each day.  Share one thing that made your day great.">
    <meta name="keywords" content="great, day, inspiration, positive">
  
    <title>TodayWasGreat.com :: What made YOUR day great?</title>
  </head>

<body>
    
 <div class="header">
      <%= link_to root_path do %> 
        <img class="twglogo" src="/images/twglogo.svg"> 
      <% end %>

    <nav class="nav">
     <img class="navSquares" src="/images/navSquares.svg">
       <div class="navMenuHide">
        <ul>
         <%= link_to root_path do %> 
          <li> Home
          </li>
         <% end %>
     
         <%= link_to 'about' do %> 
          <li> About 
          </li>
         <% end %>
   
          <%= link_to 'contact' do %> 
           <li> Contact
           </li>
          <% end %>

         <% if @user!=current_user %>
          <%= link_to "/dashboard/#{current_user.id}" do %>
           <li>  Dash
           </li>
           <% end %> 
         <% end %> 
        </ul>
      </div>
     </nav>

    <div class="whatmade">
      <img class="whatMadeBanner" src="/images/whatmadebanner.svg">
       <div class="whatmadeform">
         <%= render :partial=>'form' %>
       </div>
    </div>
 </div>

       
     <div class="posts">
       <ul>
         <% @posts.each do |post| %>
           <%= render :partial=>'show', :locals=>{:post=>post} %>

         <% if current_user && current_user.email=="todaywasgreatcom@gmail.com" %>
         <p class="editDestroy">
          <%= link_to 'Edit', [:edit, post] %>
          |
            <%= link_to 'Delete', post_path(id: post.id, user_id: params[:id]), :method => :delete, :confirm => "Are you sure?" %> <%= link_to root_path do %> 
            <% end %>
            <% end %>
          <% end %>
        </ul>
      </div>

   <div class="footer">
        <ul>
         <%= link_to "http://www.facebook.com/todaywasgreat" do %> 
          <li> <img class="fb" src="/images/fblogo.svg">
          </li>
         <% end %>

          <%= link_to "https://twitter.com/Today_was_great" do %> 
          <li> <img class="twitter" src="/images/twitterlogo.svg">
          </li>
         <% end %>

         <%= link_to "https://instagram.com/todaywasgreat" do %> 
          <li> <img class="instagram" src="/images/instagramlogo.svg">
          </li>
         <% end %>
        </ul>

      Copyright 2014 :: TodayWasGreat.com  :: Designed and Built by Nina Saporta
  </div> 
  
  </body>
</html>

